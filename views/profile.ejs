<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('partials/header.ejs',{ hide : true }) %>

    <div class="main">
        <div class="left">
                <div class="side">
                    <button class="btn btn-dark">Attendence</button>
                </div>
                <div class="side">
                    <button class="btn btn-dark">complaint</button>
                </div>
                <div class="side"> 
                    <button class="btn btn-dark">Your plan</button>
                </div>
                <div class="side"> 
                    <button class="btn btn-dark">User Menu</button>
                    <!-- <a class="nav-link" href="/complaint">complaint</a> -->
                </div>
                <div class="side"> 
                    <button class="btn btn-dark">Information</button>
                </div>
            <!-- <div class="side">hello</div>
            <div class="side">world</div>
            <div class="side">ayush</div> -->
        </div>
        <div class="right">
            <div class="upper">
                <div class="uppercontent">hello</div>
                <div class="uppercontent">world</div>
                <div class="uppercontent">ayush</div>
            </div>
            <div class="lower">
                <p class="comment">Add a Comment !</p>
                <form action="/profile" method="post">
                    <textarea class="area" name="message" rows="10" cols="30"></textarea>
                    <br><br>
                    <input class="submit" type="submit">
                </form>
                <p>
                    <p>your complaints are:-</p>
                    <% if (complaints.length > 0) { %>
                        <ul>
                            <% complaints.forEach(complaint => { %>
                                <li><%= complaint.complaint %></li>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        <p>No complaints found.</p>
                    <% } %>
                </p>
            </div>
        </div>
    </div>
</body>
</html>

    